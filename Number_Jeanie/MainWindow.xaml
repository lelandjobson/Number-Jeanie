<Window x:Class="Number_Jeanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Number_Jeanie"
        mc:Ignorable="d"
        Title="Number Jeanie" Height="412.16" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="109*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbx_Question" HorizontalAlignment="Left" Height="30" Margin="102,62,0,0" TextWrapping="Wrap" Text="Ask me a question" VerticalAlignment="Top" Width="255"/>
        <TextBlock x:Name="tb_Answer" Margin="102,110,81.4,120.6" TextWrapping="Wrap" Text="" Background="#FFF3F3F3" Grid.RowSpan="2"/>
        <Button x:Name="btn_Run" Content="Ask!" HorizontalAlignment="Left" Margin="362,62,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="75" Height="30" Click="btn_Run_Click"/>
        <TextBlock x:Name="tb_JeanieAnswer" Margin="102,0,81.4,63.6" Grid.Row="1" TextWrapping="Wrap" FontWeight="Bold" FontSize="14" Height="52" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
